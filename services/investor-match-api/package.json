{
  "name": "investor-match-api",
  "version": "1.0.0",
  "description": "Contact management microservice",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "recompute:stage-counts": "ts-node-dev --transpile-only scripts/recompute-stage-counts.ts",
    "clear:firestore": "ts-node-dev --transpile-only scripts/clear-firestore.ts",
    "seed:vocabs": "ts-node-dev --transpile-only scripts/seed-vocabs.ts",
    "seed:sample-contacts": "ts-node-dev --transpile-only scripts/seed-sample-contacts.ts",
    "seed:coverage-contacts": "ts-node-dev --transpile-only scripts/seed-schema-coverage-contacts.ts",
    "backfill:nodes": "ts-node-dev --transpile-only scripts/backfill-normalized-nodes.ts",
    "backfill:stage-rank": "ts-node-dev --transpile-only scripts/backfill-stage-rank.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "emulator:start": "firebase emulators:start --only firestore --project test-project",
    "test:integration:emulator": "FIRESTORE_EMULATOR_HOST=localhost:8080 npm run test:integration"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^5.2.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "firebase-tools": "^12.9.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/server.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  }
}
